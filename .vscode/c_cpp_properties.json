{
    "configurations": [
        {
            "name": "linux-gcc-x64",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c99",
            "cppStandard": "c++23",
            "intelliSenseMode": "linux-gcc-x64",
            "compilerArgs": [
                "-Wall",        // Enable all warnings
                "-Wextra",      // Enable extra warnings
                "-o", "${file}"  // Specify the output file name
            ]
        }
    ],
    "version": 4
}